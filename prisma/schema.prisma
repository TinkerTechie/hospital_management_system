// =============================
// REVIEW MODEL
// =============================
model Review {
  id String @id @default(uuid())

  reviewerId String
  reviewer   User   @relation("ReviewerRelation", fields: [reviewerId], references: [id])

  rating  Int    // 1-5 stars
  comment String?

  reviewerRole UserRole // Role of the person giving review
  targetType   ReviewTargetType // What is being reviewed
  targetId     String? // ID of doctor/nurse if applicable
  department   String? // Department name if reviewing department

  // Optional relations to specific entities
  doctorId String?
  doctor   Doctor? @relation("DoctorReviews", fields: [doctorId], references: [id])

  nurseId String?
  nurse   Nurse?  @relation("NurseReviews", fields: [nurseId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([targetType, targetId])
  @@index([doctorId])
  @@index([nurseId])
}

// =============================
// NOTIFICATION MODEL
// =============================
model Notification {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  title   String
  message String
  type    NotificationType @default(INFO)
  read    Boolean          @default(false)
  link    String? // Optional link to related page

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, read])
  @@index([createdAt])
}

// =============================
// PATIENT UPDATE MODEL
// =============================
model PatientUpdate {
  id String @id @default(uuid())

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  updatedById String
  updatedBy   User   @relation("UpdaterRelation", fields: [updatedById], references: [id])

  updateType  UpdateType
  title       String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
  @@index([createdAt])
}

// =============================
// CALLBACK REQUEST MODEL
// =============================
model CallbackRequest {
  id        String   @id @default(uuid())
  phone     String
  status    String   @default("Pending") // Pending, Contacted, Resolved
  createdAt DateTime @default(now())
}

// =============================
