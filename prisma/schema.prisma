// =============================
// Prisma Client Generator
// =============================
generator client {
  provider = "prisma-client-js"
}

// =============================
// PostgreSQL Datasource
// =============================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================
// ENUMS
// =============================
enum UserRole {
  PATIENT
  DOCTOR
  NURSE
  ADMIN
}

enum ReviewTargetType {
  DOCTOR
  NURSE
  DEPARTMENT
  HOSPITAL
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

enum UpdateType {
  DIAGNOSIS
  PRESCRIPTION
  APPOINTMENT
  TREATMENT
  TEST_RESULT
  GENERAL
}

// =============================
// USER MODEL
// =============================
model User {
  id               String    @id @default(uuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  password         String?
  image            String?
  role             UserRole  @default(PATIENT)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  resetToken       String?
  resetTokenExpiry DateTime?

  doctorProfile  Doctor?
  nurseProfile   Nurse?
  patientProfile Patient?

  accounts         Account[]
  sessions         Session[]
  reviewsGiven     Review[]        @relation("ReviewerRelation")
  notifications    Notification[]
  patientUpdates   PatientUpdate[] @relation("UpdaterRelation")
}

// =============================
// DOCTOR MODEL
// =============================
model Doctor {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  fullName      String
  dob           DateTime?
  gender        String?
  phone         String?
  address       String?
  profilePicUrl String?

  // ðŸ”¥ FIXED: Made optional so signup does NOT break
  licenseNumber String? @unique

  registrationState      String?
  medicalCouncil         String?
  degrees                String?
  specialization         String?
  yearsOfExperience      Int?
  currentHospital        String?
  workType               String  @default("Full-time")
  consultationFee        Float?
  documentUrls           Json?
  workingDays            Json?
  startTime              String?
  endTime                String?
  enableTeleconsultation Boolean @default(false)
  bio                    String?
  languages              String?
  emergencyContactName   String?
  emergencyContactNumber String?

  patients       Patient[]
  appointments   Appointment[]
  prescriptions  Prescription[]
  medicalRecords MedicalRecord[]
  reviews        Review[]        @relation("DoctorReviews")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =============================
// PATIENT MODEL
// =============================
model Patient {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  fullName       String
  age            Int?
  gender         String?
  dob            DateTime?
  phone          String?
  address        String?
  bloodGroup     String?
  insuranceProvider String?

  medicalHistory String?
  assignedWard   String? // e.g., "ICU", "Emergency", "General Ward"

  emergencyContactName   String?
  emergencyContactNumber String?

  doctorId String?
  doctor   Doctor? @relation(fields: [doctorId], references: [id])

  appointments   Appointment[]
  prescriptions  Prescription[]
  medicalRecords MedicalRecord[]
  updates        PatientUpdate[]
  invoices       Invoice[]
  vitals         Vitals[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

// =============================
// VITALS MODEL
// =============================
model Vitals {
  id        String   @id @default(uuid())
  patientId String
  patient   Patient  @relation(fields: [patientId], references: [id])
  
  heartRate       Int?    // BPM
  bpSystolic      Int?    // mmHg
  bpDiastolic     Int?    // mmHg
  temperature     Float?  // Fahrenheit
  oxygenSaturation Int?   // Percentage
  respiratoryRate Int?    // breaths per minute
  
  recordedBy String? // Nurse/Doctor ID or name
  notes      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =============================
// INVOICE MODEL
// =============================
model Invoice {
  id            String   @id @default(uuid())
  invoiceNumber String   @unique
  
  patientId     String
  patient       Patient  @relation(fields: [patientId], references: [id])
  
  date          DateTime
  items         Json     // Array of items
  totalAmount   Float
  paidAmount    Float    @default(0)
  discount      Float    @default(0)
  paymentMethod String?
  status        String   // paid, pending, overdue
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// =============================
// NURSE MODEL
// =============================
model Nurse {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  fullName     String
  shiftTiming  String?
  assignedWard String?
  phone        String?

  reviews   Review[] @relation("NurseReviews")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =============================
// APPOINTMENT MODEL
// =============================
model Appointment {
  id String @id @default(uuid())

  patientId String
  doctorId  String

  patient Patient @relation(fields: [patientId], references: [id])
  doctor  Doctor  @relation(fields: [doctorId], references: [id])

  appointmentDate DateTime
  time            String?
  reason          String?
  city            String?
  email           String?
  phone           String?

  createdAt DateTime @default(now())
}

// =============================
// CONTACT MESSAGE MODEL
// =============================
model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
}

// =============================
// NEXTAUTH MODELS
// =============================
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// =============================
// MEDICAL RECORD MODEL
// =============================
model MedicalRecord {
  id        String  @id @default(uuid())
  patientId String
  doctorId  String?

  patient Patient @relation(fields: [patientId], references: [id])
  doctor  Doctor? @relation(fields: [doctorId], references: [id])

  title       String?
  description String?
  type        String?   // lab-report, prescription, etc.
  
  diagnosis   String?
  treatment   String?
  notes       String?
  date        DateTime @default(now())

  attachments Json? // For file uploads (X-rays, reports)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =============================
// PRESCRIPTION MODEL
// =============================
model Prescription {
  id        String @id @default(uuid())
  patientId String
  doctorId  String

  patient Patient @relation(fields: [patientId], references: [id])
  doctor  Doctor  @relation(fields: [doctorId], references: [id])

  medication   String
  dosage       String
  frequency    String
  duration     String
  instructions String?

  issuedDate DateTime  @default(now())
  validUntil DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

