// Prisma schema for Hospital Management System
// Works with Next.js + Prisma + MySQL + NextAuth

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ----------------------
// ENUMS
// ----------------------
enum UserRole {
  PATIENT
  DOCTOR
  NURSE
}

// ----------------------
// USER MODEL
// ----------------------
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(PATIENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  doctorProfile  Doctor?
  nurseProfile   Nurse?
  patientProfile Patient?

  accounts Account[]
  sessions Session[]
}

// ----------------------
// DOCTOR MODEL
// ----------------------
model Doctor {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName               String
  dob                    DateTime
  gender                 String
  phone                  String
  address                String?
  profilePicUrl          String
  licenseNumber          String   @unique
  registrationState      String?
  medicalCouncil         String?
  degrees                String?
  specialization         String
  yearsOfExperience      Int
  currentHospital        String?
  workType               String   @default("Full-time")
  consultationFee        Float?
  documentUrls           Json // ✅ store array of URLs as JSON
  workingDays            Json // ✅ store array of days as JSON
  startTime              String
  endTime                String
  enableTeleconsultation Boolean  @default(false)
  bio                    String   @db.Text
  languages              String?
  emergencyContactName   String?
  emergencyContactNumber String?

  // Relations
  patients     Patient[]
  appointments Appointment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ----------------------
// PATIENT MODEL
// ----------------------
model Patient {
  id             String        @id @default(cuid())
  userId         String        @unique
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  age            Int?
  bloodGroup     String?
  medicalHistory String?
  doctorId       String?
  doctor         Doctor?       @relation(fields: [doctorId], references: [id])
  appointments   Appointment[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

// ----------------------
// NURSE MODEL
// ----------------------
model Nurse {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shiftTiming  String
  assignedWard String
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ----------------------
// APPOINTMENT MODEL
// ----------------------
model Appointment {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  date      String
  doctor    String
  createdAt DateTime @default(now())

  doctorId  String?
  patientId String?

  doctorRel  Doctor?  @relation(fields: [doctorId], references: [id])
  patientRel Patient? @relation(fields: [patientId], references: [id])
}

// ----------------------
// CONTACT MESSAGE MODEL
// ----------------------
model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
}

// ----------------------
// NEXTAUTH MODELS
// ----------------------
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
